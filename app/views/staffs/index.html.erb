
<h1>Manage Staffs</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%=  image_tag staff.image  , width: "150px", height: "70px"  %></td>
        <td><%= staff.content %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'New item', new_info_staff_by_staff_path(staff) %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, { method: :delete, data: { confirm: 'Are you sure?' } } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

