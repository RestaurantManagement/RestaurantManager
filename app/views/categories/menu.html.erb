<% provide(:title, "Menu") %>
 
<div class="row config-min-height bg-ctn">
	<div class="container margin-top-bottom-std">
		<% @categories.each_with_index do |category, index| %>

		<div class="col-md-6 categories-a">
			<a href=<%= "menu/#{category.id}" %> >
				<h2 class="categories-title"><%= category.content %></h2>
				<%= image_tag category.image_url.to_s , width: "100%", height: "300px" %>
			</a>
		</div>

		<% end %>
	</div>
</div>

